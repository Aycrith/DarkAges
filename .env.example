# DarkAges MMO - Production Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Database Credentials
# =============================================================================

# Redis Configuration
REDIS_PASSWORD=darkages_secure_password_change_me

# ScyllaDB Configuration
SCYLLA_PASSWORD=cassandra_secure_password_change_me

# =============================================================================
# Monitoring
# =============================================================================

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_secure_password
GRAFANA_ROOT_URL=http://localhost:3000

# =============================================================================
# Alerting
# =============================================================================

# Email (SMTP) Configuration
SMTP_HOST=smtp.example.com:587
SMTP_FROM=alerts@darkages.example.com
SMTP_USER=alerts@darkages.example.com
SMTP_PASS=your_smtp_password

# PagerDuty Integration
PAGERDUTY_KEY=your_pagerduty_integration_key

# Slack Webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alert Recipients
ALERT_EMAIL=ops@darkages.example.com

# =============================================================================
# Backup
# =============================================================================

# AWS S3 Configuration for Backups
BACKUP_S3_BUCKET=darkages-backups
BACKUP_AWS_ACCESS_KEY=your_aws_access_key
BACKUP_AWS_SECRET_KEY=your_aws_secret_key
BACKUP_AWS_REGION=us-east-1

# =============================================================================
# Admin API
# =============================================================================

# Admin API Token (for drain, maintenance, emergency mode)
ADMIN_TOKEN=change_to_secure_random_token
